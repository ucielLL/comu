<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Comu.view.Presentation.DescriptionView">
    <Grid  
          Padding="10"  
           RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height=".1*"/>
            <RowDefinition Height=".20*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="whit_phone" Aspect="AspectFill"/>
        
        <Label Grid.Row="1"
               Text="COMU"
               HorizontalTextAlignment="Center"
               VerticalOptions="Center"
               FontAttributes="Bold"
              TextColor="White"
               FontSize="Title"
               Margin="0"
            />
        <Label Grid.Row="2"
               Text="COMU funciona como una herramienta que ayuda a difundir decisiones al mover el celular"
               FontSize="Medium"
               TextColor="White"
                HorizontalTextAlignment="Center"
               VerticalOptions="StartAndExpand"/>
    </Grid>
 
</ContentView>